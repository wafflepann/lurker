{
  "manifest_version": 3,
  "name": "Twitch Lurker",
  "version": "1.0",
  "description": "Auto-open Twitch streams when they go live, and close when offline.",
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["https://api.twitch.tv/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icon.png"
  }
}
